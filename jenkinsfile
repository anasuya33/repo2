pipeline {
    agent any
    environment 
{
MAVEN_HOME = "Hello, Jenkins!"
}
 {
stage ('1')

{
steps
{
sh ' git clone https://github.com/RavitejaAdepudi/javawar.git'
}
}
  stage ('2')

{
steps
{
sh ' mvn -f /var/lib/jenkins/workspace/abcd4/javawar/pom.xml install '
}
}
  stage ('3')

{
steps
{
sh ' cp -R  /var/lib/jenkins/workspace/abcd4/javawar/target/*.war /opt/apache-tomcat-9.0.99/webapps '
}
}
}
 
}
